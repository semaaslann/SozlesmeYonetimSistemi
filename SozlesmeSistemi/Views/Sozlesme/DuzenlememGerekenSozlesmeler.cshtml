@model List<SozlesmeSistemi.Models.Contract>

@{
    ViewData["Title"] = "DuzenlememGerekenSozlesmeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.AntiForgeryToken() <!-- Anti-forgery token -->
