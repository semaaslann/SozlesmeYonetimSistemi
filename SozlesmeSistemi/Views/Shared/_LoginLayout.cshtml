<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="w-100" style="max-width: 400px;">

            <!-- Yuvarlak Alan (Arkaplan ve Üst Resim) -->
            <div style="width: 200px; height: 200px; border-radius: 50%; overflow: hidden;
            position: relative; margin: 0 auto; box-shadow: 0 4px 8px rgba(0,0,0,0.2);">

                <!-- Arka Plan Görseli -->
                <img src="~/icons/arkaplan.png" alt="Arkaplan"
                     style="width: 100%; height: 100%; object-fit: cover;">

                <!-- Üstte Gözükecek Resim (Logo vb.) -->
                <img src="~/icons/tusas.png" alt="Logo"
                     style="width: 200px; height: 200px; position: absolute;
                top: 50%; left: 50%; transform: translate(-50%, -50%);
                object-fit: contain;">
            </div>

            <!-- Başlıklar -->
            <div class="text-center mb-4">
                <div class="brand-title">TÜRKHAVACILIK</div>
                <div class="brand-subtitle">UZAYSANAYİİ</div>
            </div>

            <!-- Sayfa İçeriği -->
            <div class="card shadow-sm">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
